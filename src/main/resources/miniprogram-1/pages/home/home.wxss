.content{
  margin: 0 20rpx;
  text-align: justify; 
}  
.item{
  background-color: #fff;
  /* margin: 1%;  */
  margin-bottom: 20rpx;
  display: inline-block;
  width: 100%;
}
.item-ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.heart{
  width: 40rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.heart_{
  display: flex;
  align-items: center;
}
.item-img{
  width: 100%;
  border-radius: 10rpx;
}
.item-title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  color: #1e1e1e;
  margin: 15rpx;
  width: 100%;
}
.item .name{
  display: flex;
  /* padding: 0 15rpx; */
  padding-top: 0rpx;
  /* margin-top: 20rpx; */
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.item-title-box{
  display: flex;
  position: relative;
}
.name-title{
  flex: 1;
  margin-left: 18rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.name text:last-child{
  flex: 0 0 30rpx;
  color: #c4c4c4;
  /* text-decoration: underline; */
  line-height: 10rpx;
  
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}

.arrow {
  height: 60rpx;
  width: 10%;
}


.content{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  overflow: hidden;
}



.water-fall{
  width: 100%;
  background: #f5f5f5;
  padding: 10px;
  box-sizing: border-box;
  -moz-column-count: 2;
  -webkit-column-count: 2;
  column-count: 2;
  column-gap: 10rpx; 
}

.item-box{
  -moz-page-break-inside: avoid;
  -webkit-column-break-inside: avoid;
  break-inside: avoid; 
  position: relative;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  vertical-align: top;
}
.tag{
  overflow: hidden;
  position: absolute;
  top: 20px;
  left: 0;
  color: #fff;
  padding: 4px 15px;
  background: rgba(0, 0, 0, .5);
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}
.pro-img{
  width: 100%;
  border-radius: 15rpx;
  
}
.two-line-hide-txt{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bt-info{
  display: flex;
  justify-content: space-between;
  padding: 10px;
}
