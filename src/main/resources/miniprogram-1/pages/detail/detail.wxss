/* pages/detail/detail.wxss */
page {
  background-color: #edece8;
}
.userinfo_wrap {
  height: 45vh;
  background-color: #ffffff;
}
.userinfo_wrap .image_wrap {
  position: relative;
}
.userinfo_wrap .image_wrap .user_bg {
  height: 45vh;
  filter: blur(10px);
}
.userinfo_wrap .image_wrap .userinfo {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  text-align: center;
}
.userinfo_wrap .image_wrap .userinfo .user_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.userinfo_wrap .image_wrap .userinfo .user_name {
  font-size: 40rpx;
  margin-top: 25rpx;
  color: seashell;
}
.userinfo_wrap .userbtn {
  left: 50%;
  top: 25%;
  position: absolute;
  transform: translateX(-50%);
  font-size: 40rpx;
  padding: 30rpx;
  border-radius: 10%;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  left: 50%;
  width: 90%;
  top: -40rpx;
  transform: translateX(-50%);
}
.user_content .user_main .user_menu {
  display: flex;
  background-color: #fff;
}
.user_content .user_main .user_menu navigator {
  padding: 10rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .user_menu navigator .this_num {
  font-size: 25rpx;
  color: red;
}
.user_content .user_main .user_menu navigator .this_name {
  font-size: 25rpx;
  color: #666;
}
.user_content .user_main .appinfo {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .appinfo .appinfo_item {
  font-size: 30rpx;
  padding: 20rpx;
  color: #666;
  border-bottom: 1px solid #ccc;
}
.user_content .user_main .appinfo .app_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .app_button {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666;
}
