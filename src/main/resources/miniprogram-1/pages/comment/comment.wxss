.info {
  border-bottom: 1px solid #ccc;
}
.info .user {
  margin-top: 25rpx;
  height: 120rpx;
  margin-left: 20rpx;
}
.info .user image {
  direction: flex;
  flex-direction: column;
  width: 84rpx;
  height: 84rpx;
  margin-left: 15rpx;
  border-radius: 50%;
  float: left;
  display: flex;
}
.info .user .name {
  float: left;
  padding-top: 15rpx;
  padding-left: 30rpx;
  text-align: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
}
.info .menuimg {
  width: 70%;
  margin-left: 15%;
}
.info .star {
  margin: 20rpx;
}
.info .star text{
  font-size: 30rpx;
  color: #ccc
}
.info .star image {
  width: 60rpx;
  height: 60rpx;
}
.info .star .img1 {
  width: 40rpx;
  height: 40rpx;
  padding-left: 10%;
}
.info .star .img2 {
  padding-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.info .star .img3 {
  float: right;
  padding-right: 10%;
  width: 40rpx;
  height: 40rpx;
}
.info .title {
  margin-left: 30rpx;
  padding-left: 10%;
  padding-right: 10%;
  font-size: 35rpx;
  color: #666;
  padding-bottom: 25rpx;
}
