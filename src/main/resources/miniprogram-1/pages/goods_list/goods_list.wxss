.first_tab .goods_item {
  border-top: 15rpx solid #ffffff;
  display: flex;
}
.first_tab .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img_wrap image {
  width: 80%;
  border-radius: 7%;
}
.first_tab .goods_item .goods_info_wrap {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  flex: 3;
}
.first_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 30rpx;
}
.first_tab .goods_item .goods_info_wrap .goods_step {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 20rpx;
}
.first_tab .goods_item .goods_info_wrap .goods_user {
  font-size: 20rpx;
  color: #ccc;
}
